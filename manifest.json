{
    "name": "Moodle Plus",
    "version": "1.1",
    "manifest_version": 3,
    "default_locale": "ja",
    "description": "Moodleにちょっとした機能を追加します!",
    "icons": {
        "16": "./icons/icon16.png",
        "32": "./icons/icon32.png",
        "48": "./icons/icon48.png",
        "128": "./icons/icon128.png"
    },
    "author": "tomo0611@hotmail.com",
    "content_scripts": [
        {
            "matches": [
                "https://lms.omu.ac.jp/*",
                "https://moodle.s.kyushu-u.ac.jp/*"
            ],
            "js": [
                "./dist/content_script_injector.js"
            ],
            "css": [
                "./styles/main.css"
            ]
        }
    ],
    "web_accessible_resources": [{
        "resources": [ "dist/content_script.js" ],
        "matches": [
            "https://lms.omu.ac.jp/*",
            "https://moodle.s.kyushu-u.ac.jp/*"
        ]
    }]
}